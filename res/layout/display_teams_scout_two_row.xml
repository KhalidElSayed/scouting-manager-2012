<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/display_teams_scout_two_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp" >

    <TextView
        android:id="@+id/display_row_scout_two_team"
        style="@style/DisplayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </TextView>

    <TextView
        android:id="@+id/display_row_scout_two_plays_auto"
        style="@style/DisplayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" >
    </TextView>

    <TextView
        android:id="@+id/display_row_scout_two_push_down_bridge"
        style="@style/DisplayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">
    </TextView>

    <TextView
        android:id="@+id/display_row_scout_two_strategy"
        style="@style/DisplayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" >
    </TextView>

</LinearLayout>