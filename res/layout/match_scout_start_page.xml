<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <EditText
        android:id="@+id/ET_team_number"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:hint="@string/team_number_hint"
        android:inputType="number"
        android:maxLength="5"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/ET_match_number"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/ET_team_number"
        android:layout_alignLeft="@id/ET_team_number"
        android:hint="@string/match_number_hint"
        android:inputType="number"
        android:maxLength="5"
        android:selectAllOnFocus="true" />

    <TextView
        android:id="@+id/TV_match_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ET_match_number"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@id/ET_match_number"
        android:text="@string/match_number"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TV_team_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ET_team_number"
        android:layout_alignLeft="@id/TV_match_number"
        android:text="@string/team_number"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>