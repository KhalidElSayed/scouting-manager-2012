<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/display_team_matches_teleop_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/display_row_teleop_match"
        style="@style/DisplayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </TextView>

    <TextView
        android:id="@+id/display_row_teleop_low_shots_made_attempt"
        style="@style/DisplayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" >
    </TextView>

    <TextView
        android:id="@+id/display_row_teleop_med_shots_made_attempt"
        style="@style/DisplayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" >
    </TextView>

    <TextView
        android:id="@+id/display_row_teleop_high_shots_made_attempt"
        style="@style/DisplayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" >
    </TextView>

</LinearLayout>