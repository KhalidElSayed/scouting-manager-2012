<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="5dp" >

    <!-- Nest these Views in RelativeLayout and center them in screen -->

    <RelativeLayout
        android:id="@+id/Autonomous_Screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <!-- High Basket -->

        <TextView
            android:id="@+id/TV_Auto_Shots_High"
            style="@style/match_basket_header"
            android:text="@string/STR_Shots_High" />

        <Button
            android:id="@+id/BT_Auto_Shots_Hit_High"
            style="@style/match_button_hit"
            android:layout_alignLeft="@id/TV_Auto_Shots_High"
            android:layout_below="@id/TV_Auto_Shots_High" />

        <Button
            android:id="@+id/BT_Auto_Shots_Miss_High"
            style="@style/match_button_miss"
            android:layout_alignBaseline="@id/BT_Auto_Shots_Hit_High"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/BT_Auto_Shots_Hit_High" />

        <EditText
            android:id="@+id/ET_Auto_Shots_Hit_High"
            style="@style/match_basket_counter"
            android:layout_alignBaseline="@id/BT_Auto_Shots_Hit_High"
            android:layout_marginLeft="75dp"
            android:layout_toRightOf="@id/BT_Auto_Shots_Miss_High" />

        <TextView
            android:id="@+id/TV_Slash_1"
            style="@style/match_slash"
            android:layout_alignBaseline="@id/BT_Auto_Shots_Hit_High"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/ET_Auto_Shots_Hit_High" />

        <EditText
            android:id="@+id/ET_Auto_Shots_Atmp_High"
            style="@style/match_basket_counter"
            android:layout_alignBaseline="@id/BT_Auto_Shots_Hit_High"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/TV_Slash_1" />

        <!-- Medium Basket -->

        <TextView
            android:id="@+id/TV_Auto_Shots_Med"
            style="@style/match_basket_header"
            android:layout_marginTop="25dp"
            android:layout_below="@id/BT_Auto_Shots_Hit_High"
            android:text="@string/STR_Shots_Med" />

        <Button
            android:id="@+id/BT_Auto_Shots_Hit_Med"
            style="@style/match_button_hit"
            android:layout_alignLeft="@id/BT_Auto_Shots_Hit_High"
            android:layout_below="@id/TV_Auto_Shots_Med" />

        <Button
            android:id="@+id/BT_Auto_Shots_Miss_Med"
            style="@style/match_button_miss"
            android:layout_alignBaseline="@id/BT_Auto_Shots_Hit_Med"
            android:layout_alignLeft="@id/BT_Auto_Shots_Miss_High" />

        <EditText
            android:id="@+id/ET_Auto_Shots_Hit_Med"
            style="@style/match_basket_counter"
            android:layout_alignBaseline="@id/BT_Auto_Shots_Hit_Med"
            android:layout_alignLeft="@id/ET_Auto_Shots_Hit_High" />

        <TextView
            android:id="@+id/TV_Slash_2"
            style="@style/match_slash"
            android:layout_alignBaseline="@id/BT_Auto_Shots_Hit_Med"
            android:layout_alignLeft="@id/TV_Slash_1" />

        <EditText
            android:id="@+id/ET_Auto_Shots_Atmp_Med"
            style="@style/match_basket_counter"
            android:layout_alignBaseline="@id/BT_Auto_Shots_Hit_Med"
            android:layout_alignLeft="@id/ET_Auto_Shots_Atmp_High" />

        <!-- Low Basket -->

        <TextView
            android:id="@+id/TV_Auto_Shots_Low"
            style="@style/match_basket_header"
            android:layout_marginTop="25dp"
            android:layout_below="@id/BT_Auto_Shots_Hit_Med"
            android:text="@string/STR_Shots_Low" />

        <Button
            android:id="@+id/BT_Auto_Shots_Hit_Low"
            style="@style/match_button_hit"
            android:layout_alignLeft="@id/BT_Auto_Shots_Hit_High"
            android:layout_below="@id/TV_Auto_Shots_Low" />

        <Button
            android:id="@+id/BT_Auto_Shots_Miss_Low"
            style="@style/match_button_miss"
            android:layout_alignBaseline="@id/BT_Auto_Shots_Hit_Low"
            android:layout_alignLeft="@id/BT_Auto_Shots_Miss_High" />

        <EditText
            android:id="@+id/ET_Auto_Shots_Hit_Low"
            style="@style/match_basket_counter"
            android:layout_alignBaseline="@id/BT_Auto_Shots_Hit_Low"
            android:layout_alignLeft="@id/ET_Auto_Shots_Hit_High" />

        <TextView
            android:id="@+id/TV_Slash_3"
            style="@style/match_slash"
            android:layout_alignBaseline="@id/BT_Auto_Shots_Hit_Low"
            android:layout_alignLeft="@id/TV_Slash_1" />

        <EditText
            android:id="@+id/ET_Auto_Shots_Atmp_Low"
            style="@style/match_basket_counter"
            android:layout_alignBaseline="@id/BT_Auto_Shots_Hit_Low"
            android:layout_alignLeft="@id/ET_Auto_Shots_Atmp_High" />
    </RelativeLayout>
    <!--
	<TextView
        android:id="@+id/Autonomous_Header"
        style="@style/match_header"
        android:layout_above="@id/Autonomous_Screen"
        android:text="@string/autonomous" />
    -->

</RelativeLayout>