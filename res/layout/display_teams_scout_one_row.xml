<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/display_teams_scout_one_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp" >

    <TextView
        android:id="@+id/display_row_scout_one_team"
        style="@style/DisplayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </TextView>

    <TextView
        android:id="@+id/display_row_scout_one_drive"
        style="@style/DisplayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" >
    </TextView>

    <TextView
        android:id="@+id/display_row_scout_one_wheels"
        style="@style/DisplayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">
    </TextView>

    <TextView
        android:id="@+id/display_row_scout_one_kinect"
        style="@style/DisplayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" >
    </TextView>

</LinearLayout>